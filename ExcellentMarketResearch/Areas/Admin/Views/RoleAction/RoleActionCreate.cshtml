@model ExcellentMarketResearch.Areas.Admin.Models.ViewModel.RoleActionVM
@{
    ViewBag.Title = "RoleActionCreate";
    var ObjAction=new ExcellentMarketResearch.Areas.Admin.Models.DAL.RoleActionRepository();
    var Action=ObjAction.GetActions();
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label for="Action Name">Role Name</label>
                </div>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.RoleName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label for="IsActive">IsActive</label>
                </div>
                <div class="col-sm-5">
                    @Html.CheckBoxFor(m => m.IsActive)
                </div>
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>
        foreach(var item in Action)
        {
                <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <label for="IsActive">@item.ActionName</label>
                </div>
                <div class="col-sm-5">
                    <input type="checkbox" name="actions" value="@item.ActionId" />
                </div>
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div> 
        }

        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "RoleActionIndex")
</div>

