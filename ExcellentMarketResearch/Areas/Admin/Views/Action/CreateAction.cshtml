@model ExcellentMarketResearch.Areas.Admin.Models.ViewModel.ActionVM
@{
    ViewBag.Title = "CreateAction";
}

<h2>CreateAction</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="col-sm-12">
            <div class="col-sm-2">
                <label for="Action Name">Action Name</label>
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.ActionName, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.ActionName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <div class="col-sm-2">
                <label for="IsActive">IsActive</label>
            </div>
            <div class="col-sm-5">
                @Html.CheckBoxFor(m => m.IsActive)
            </div>
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <div class="col-sm-2">
                  <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>